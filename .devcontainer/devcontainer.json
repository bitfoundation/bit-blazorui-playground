{
  "name": "Bit Blazor UI Playground",
  "image": "mcr.microsoft.com/dotnet/nightly/sdk:8.0",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "onCreateCommand": "dotnet dev-certs https --trust && dotnet build Bit.BlazorUIPlayground.Web.csproj",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "Pages/Home.razor"
      ]
    },
    "vscode": {
      "extensions": [
        "ms-dotnettools.vscode-dotnet-runtime",
        "kevin-chatham.aspnetcorerazor-html-css-class-completion",
        "ms-dotnettools.csharp"
      ]
    }
  },
  "portsAttributes": {
    "4000": {
      "label": "Application",
      "onAutoForward": "openPreview"
    },
    "4001": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    4000,
    4001
  ]
}