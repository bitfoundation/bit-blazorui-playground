{
  "name": "Bit Blazor UI Playground",
  "image": "mcr.microsoft.com/devcontainers/dotnet:0-7.0",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "postCreateCommand": "dotnet watch && sudo apt-get update && sudo apt-get install -y xdg-utils && xdg-open http://localhost:4000",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "Pages/App.razor"
      ]
    },
    "vscode": {
      "extensions": [
        "ms-dotnettools.vscode-dotnet-runtime",
        "kevin-chatham.aspnetcorerazor-html-css-class-completion",
        "ms-dotnettools.csdevkit"
      ]
    }
  },
  "portsAttributes": {
    "4000": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    4000
  ]
}